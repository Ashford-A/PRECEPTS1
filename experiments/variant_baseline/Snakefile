
import os

LOCALDIR = os.path.join(os.environ['CODEDIR'],
                        'HetMan', 'experiments', 'variant_baseline')

TMPDIR = os.path.join(os.environ['TEMPDIR'],
                      'HetMan', 'variant_baseline', config['expr_source'],
                      "{}__samps-{}".format(config['cohort'],
                                            config['samp_cutoff']),
                      config['classif'])

OUTDIR = os.path.join(os.environ['DATADIR'], 'HetMan', 'variant_baseline',
                      "{}__{}__samps-{}".format(config['expr_source'],
                                                config['cohort'],
                                                config['samp_cutoff']))


localrules: target, consolidate


rule target:
    input:
        expand("{outdir}/out-data__{classif}.p.gz",
               outdir=OUTDIR, classif=config['classif'])

    threads: 1


rule classify:
    output: "{TMPDIR}/output/out__cv-{cv_id}_task-{task_id}.p"

    threads: 8

    shell: """
        set +u; source activate HetMan; set -u;
        export OMP_NUM_THREADS=1;
        sleep $(( ({wildcards.cv_id} + 1) * ({wildcards.task_id} + 1) * $(shuf -i 1-9 -n 1) ));
 
        python {LOCALDIR}/fit_tests.py {config[classif]} --use_dir={TMPDIR} \
                --task_count={config[task_count]} \
                --task_id={wildcards.task_id} --cv_id={wildcards.cv_id}
        """


rule consolidate:
    input:
        expand("{tmpdir}/output/out__cv-{cv_id}_task-{task_id}.p",
               tmpdir=TMPDIR,
               cv_id=range(51), task_id=range(config['task_count']))

    output:
        expand("{outdir}/out-data__{classif}.p.gz",
               outdir=OUTDIR, classif=config['classif'])

    threads: 1

    shell: """
        set +u; source activate HetMan; set -u;
        python {LOCALDIR}/merge_tests.py {TMPDIR}

        cp {TMPDIR}/setup/cohort-data.p {OUTDIR}/cohort-data__{config[classif]}.p
        cp {TMPDIR}/out-data.p.gz {OUTDIR}/out-data__{config[classif]}.p.gz
        """

